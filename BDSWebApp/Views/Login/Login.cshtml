@model LoginViewModel

@{
	ViewData["Title"] = "BDS Login";
}

@section Scripts {
	<script src="~/js/login/login.js"></script>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
	<div class="col-md-6 offset-md-3">
		<h2>BDS Login</h2>
		<hr />
		<form asp-action="Login" method="post">
			<div asp-validation-skummary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="TellerNumber"></label>
				<input asp-for="TellerNumber" id="txtTellerNumber" class="form-control" />
				<span asp-validation-for="TellerNumber" class="text-danger"></span>
			</div>
			<br />
			<button type="button" id="btnLogin" class="btn btn-primary">Login</button>
		</form>
	</div>
</div>


@Html.Hidden("Login", Html.Raw(Url.Action("LoginSend", "Login")))
